<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hientran.karaoke_search">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/musiciocn"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timkiem"
            android:label="@string/app_name"

            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".customtable2"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Song"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name=".customtable2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            />
        </activity>
        <activity
            android:name=".Tab_Update"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name=".Tab4Activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Photos Activity -->
        <activity

            android:name=".YeuThich"
            android:screenOrientation="portrait" />
        <!-- Update Activity -->
        <activity
            android:name=".Capnhat"
            android:screenOrientation="portrait"
            />
        <activity android:name=".Tab_Help">
            
        </activity>
    </application>

</manifest>
