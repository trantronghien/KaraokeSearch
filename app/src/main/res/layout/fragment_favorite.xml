<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/layout_spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/theme_color_primary"
      android:orientation="horizontal"
      android:weightSum="2">
    <Button
        android:id="@+id/button_backup_favorite"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/button_square_style"
        android:text="Lưu online"
        android:textColor="@color/black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_backup_to_server"
        android:drawablePadding="2dip"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        />

    <Button
        android:id="@+id/button_restore_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/button_square_style"
        android:drawablePadding="2dip"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:drawableRight="@drawable/ic_restore_from_server"
        android:text="Đồng bộ"
        android:textColor="@color/black_text" />
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recycler_favorite"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      >
  </android.support.v7.widget.RecyclerView>

</LinearLayout>