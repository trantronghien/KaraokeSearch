<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:layout_margin="1dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/card_edge"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView_item_song_code"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="3dp"
                android:text="6098754"
                android:textColor="@color/song_code"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/chb_item_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="3"
                android:button="@drawable/chk_favorite"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold|normal"
               />

            <TextView
                android:id="@+id/textView_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_song_name"
                android:layout_toRightOf="@+id/chb_item_favorite"
                android:text="Tác giả"
                android:textColor="@color/author"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/TextView_item_lyric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_song_name"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/chb_item_favorite"
                android:text="lời bài hát"
                android:textColor="@color/lyrics"
                android:textSize="12dp"
                android:textStyle="italic|normal" />
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>