<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape android:shape="rectangle" android:padding="10dp">
            <solid android:color="@color/color_radio_checked"/>
            <corners
                android:topLeftRadius="@dimen/border_radio_radius"
                android:bottomLeftRadius="@dimen/border_radio_radius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:padding="10dp">
            <stroke android:width="1dp" android:color="@color/color_radio_checked"/>
            <corners
                android:topLeftRadius="@dimen/border_radio_radius"
                android:bottomLeftRadius="@dimen/border_radio_radius"/>
        </shape>
    </item>
</selector>